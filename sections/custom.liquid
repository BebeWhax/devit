<style>
  

  .outfit-product-card {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: 16px;
    padding: 16px;
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
  }

  .product-image {
    width: auto;
    height: auto;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-details {
    display: flex;
    flex-direction: column;
    gap: 12px;
    min-width: 0;
  }

  .product-header {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .product-title {
    font-size: 14px;
    font-weight: 600;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .product-price {
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
  }

  .price-sale {
    color: #d32f2f;
    font-weight: 600;
    font-size: 16px;
  }

  .price-compare {
    color: #757575;
    text-decoration: line-through;
    font-size: 14px;
  }

  .price-regular {
    font-weight: 600;
    font-size: 16px;
  }

  .product-description {
    font-size: 13px;
    color: #666;
    margin: 0;
    line-height: 1.4;
  }

  .product-actions {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: auto;
  }

  .variant-selector {
    position: relative;
  }

  .variant-label {
    display: block;
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 2px;
    font-size: 13px;
    text-align: center;
    background: #f9f9f9;
  }

  .variant-select {
    width: 100%;
    padding: 8px 32px 8px 12px;
    border: 1px solid #ddd;
    border-radius: 2px;
    font-size: 13px;
    background: #fff url("data:image/svg+xml,%3Csvg width='10' height='6' viewBox='0 0 10 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L5 5L9 1' stroke='%23666' stroke-width='1.5' stroke-linecap='round'/%3E%3C/svg%3E") no-repeat right 12px center;
    appearance: none;
    cursor: pointer;
  }

  .outfit-swiper {
    width: 100%;
    padding: 0 15px 50px;
    box-sizing: border-box;
  }

  .swiper-slide {
    height: auto;
    transition: transform 0.3s ease;
  }

  .swiper-button-prev,
  .swiper-button-next {
    position: absolute;
    top: 45%;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.85);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.25s ease;
  }

  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    background: #000;
    color: #fff;
  }

  .swiper-button-prev::after,
  .swiper-button-next::after {
    font-size: 16px;
    color: #000;
    font-weight: bold;
  }

  .swiper-button-prev:hover::after,
  .swiper-button-next:hover::after {
    color: #fff;
  }

  .swiper-button-prev {
    left: -5px;
  }

  .swiper-button-next {
    right: -5px;
  }

  .swiper-pagination {
    bottom: 10px !important;
  }

  .swiper-pagination-bullet {
    background: #000;
    opacity: 0.2;
    transition: opacity 0.3s;
  }

  .swiper-pagination-bullet-active {
    opacity: 1;
  }

  @media (max-width: 749px) {
    .outfit-swiper {
      padding: 0 0 45px;
    }

    .swiper-button-prev,
    .swiper-button-next {
      width: 32px;
      height: 32px;
      top: 42%;
      background: rgba(255, 255, 255, 0.9);
    }

    .swiper-button-prev::after,
    .swiper-button-next::after {
      font-size: 14px;
    }

    .swiper-button-prev {
      left: 5px;
    }

    .swiper-button-next {
      right: 5px;
    }
  }

  .variant-select:focus {
    outline: 2px solid #000;
    outline-offset: 2px;
  }

  .add-to-cart-btn {
    width: 100%;
    padding: 12px 20px;
    background: #000;
    color: #fff;
    border: none;
    border-radius: 2px;
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .add-to-cart-btn:hover:not(:disabled) {
    background: #333;
  }

  .add-to-cart-btn:focus {
    outline: 2px solid #000;
    outline-offset: 2px;
  }

  .add-to-cart-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .add-to-cart-btn.loading {
    position: relative;
    color: transparent;
  }

  .add-to-cart-btn.loading::after {
    content: '';
    position: absolute;
    width: 16px;
    height: 16px;
    top: 50%;
    left: 50%;
    margin-left: -8px;
    margin-top: -8px;
    border: 2px solid #fff;
    border-radius: 50%;
    border-top-color: transparent;
    animation: spinner 0.6s linear infinite;
  }

  @keyframes spinner {
    to {
      transform: rotate(360deg);
    }
  }

  .swiper-pagination {
    bottom: 10px !important;
  }

  .swiper-pagination-bullet {
    background: #000;
    opacity: 0.3;
  }

  .swiper-pagination-bullet-active {
    opacity: 1;
  }

  /* Tablet styles */
  @media screen and (min-width: 750px) {

    .outfit-builder-section {
    margin: 0 auto;
  }

  .outfit-builder-container {
    display: grid;
    gap: 30px;
  }

  .outfit-builder-image {
    width: 100%;
    overflow: hidden;
  }

  .outfit-builder-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .outfit-swiper {
    width: 100%;
    padding-bottom: 40px;
  }
